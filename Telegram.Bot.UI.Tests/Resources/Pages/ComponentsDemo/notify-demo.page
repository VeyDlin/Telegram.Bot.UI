    <script>
        onMounted(function() {
            component('toastBtn').onClick = function() {
                UI.toast('This is a toast notification!');
            };

            component('alertBtn').onClick = function() {
                UI.alert('This is a modal alert!\n\nClick OK to dismiss.');
            };

            component('closeBtn').onClick = function() {
                UI.close();
            };

            component('confirmBtn').onClick = function() {
                UI.toast('Action confirmed!');
            };

            component('cancelBtn').onClick = function() {
                UI.toast('Action cancelled');
            };
        });
    </script>
