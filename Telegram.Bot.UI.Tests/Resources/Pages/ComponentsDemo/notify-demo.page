        <br/>
        Alert: Modal popup with OK button
        <br/>
        Close: Deletes this message
    </message>

    <components>
        <!-- Toast notification -->
        <command id="toastBtn" title="ðŸ“¢ Show Toast"></command>

        <!-- Alert popup -->
