<view id="settings-demo" web-preview="false" back-title="¬´ Back">
    <title>‚öôÔ∏è Settings</title>

    <message>
        <b>Application Settings</b>
        <br/><br/>
        Configure your preferences below.
    </message>

    <components max-rows="5">
        <!-- Page 1: General - using checkboxes for ON/OFF toggles -->
        <checkbox id="darkMode" title="{{ self.isSelected ? 'üåô Dark Mode: ON' : '‚òÄÔ∏è Dark Mode: OFF' }}"></checkbox>

        <checkbox id="sounds" title="{{ self.isSelected ? 'üîä Sounds: ON' : 'üîá Sounds: OFF' }}"></checkbox>

        <checkbox id="vibration" title="{{ self.isSelected ? 'üì≥ Vibration: ON' : 'üì¥ Vibration: OFF' }}"></checkbox>

        <radio id="fontSize">
            <option value="small" title="üî§ Small Text"></option>
            <option value="medium" title="üî§ Medium Text"></option>
            <option value="large" title="üî§ Large Text"></option>
        </radio>

        <!-- Page 2: Privacy -->
        <checkbox id="analytics" title="{{ self.isSelected ? 'üìä Analytics: ON' : 'üìä Analytics: OFF' }}"></checkbox>

        <checkbox id="location" title="{{ self.isSelected ? 'üìç Location: ON' : 'üìç Location: OFF' }}"></checkbox>

        <row>
            <checkbox id="shareContacts" title="üë• Contacts"></checkbox>
            <checkbox id="sharePhotos" title="üì∑ Photos"></checkbox>
        </row>

        <!-- Page 3: About -->
        <command id="version" title="üì± Version 1.0.0"></command>

        <command id="terms" title="üìÑ Terms of Service"></command>

        <command id="privacy" title="üîí Privacy Policy"></command>

        <command id="resetAll" title="‚ö†Ô∏è Reset All Settings"></command>

        <!-- Navigation -->
        <navigate></navigate>
    </components>

    <script>
        onMounted(function() {
            // Initialize some defaults using checkbox toggle
            component('darkMode').toggle();
            component('sounds').toggle();
            component('fontSize').select('medium');

            component('version').onClick = function() {
                UI.alert('Telegram.Bot.UI Demo\nVersion: 1.0.0\nBuild: 2024.12.14');
            };

            component('terms').onClick = function() {
                UI.alert('Terms of Service\n\nThis is a demo application.\nNo actual terms apply.');
            };

            component('privacy').onClick = function() {
                UI.alert('Privacy Policy\n\nThis demo does not collect any data.\nAll settings are stored locally.');
            };

            component('resetAll').onClick = function() {
                component('darkMode').isSelected = false;
                component('sounds').isSelected = false;
                component('vibration').isSelected = false;
                component('analytics').isSelected = false;
                component('location').isSelected = false;
                component('shareContacts').isSelected = false;
                component('sharePhotos').isSelected = false;
                component('fontSize').select('medium');
                UI.toast('All settings have been reset!');
            };
        });
    </script>
</view>
