            </option>
        </radio-modal>

        <!-- Radio-modal with pagination -->
        <radio-modal id="paginatedModal" title="ðŸ“„ Paginated (3 per page)"
            maxItems="3">
            <option title="Page 1" value="p1"></option>
            <option title="Page 2" value="p2"></option>
            <option title="Page 3" value="p3"></option>
            <option title="Page 4" value="p4"></option>
            <option title="Page 5" value="p5"></option>
            <option title="Page 6" value="p6"></option>
        </radio-modal>
    </components>
