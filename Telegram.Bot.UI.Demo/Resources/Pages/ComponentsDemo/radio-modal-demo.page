    <components>
        <!-- Simple radio-modal -->
        <radio-modal id="colorModal" :title="'ðŸŽ¨ Color: ' + selectedColor"
            v-bind-selected="selectedColor"
            v-on-select="selectedColor = event.select.id; UI.toast('Selected ' + event.select.title);">
