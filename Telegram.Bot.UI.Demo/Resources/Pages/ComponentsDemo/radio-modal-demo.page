                    <wallpaper url="https://placehold.co/100x100/0000ff/ffffff?text=BLUE"/>
                </message>
            </option>
        </radio-modal>

        <!-- Radio-modal with dynamic title -->
        <radio-modal id="sizeModal" :title="'ðŸ“ Size: ' + selectedSize"
            v-bind-selected="selectedSize"
            v-on-select="selectedSize = event.select.id;">
            <option title="S - Small" value="small"></option>
